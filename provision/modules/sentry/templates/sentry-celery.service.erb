[Unit]
Description=Celery background worker
After=network.target multi-user.target

[Service]
User=<%= scope['sentry::user'] %>
Group=<%= scope['sentry::group'] %>
Environment=SENTRY_CONF=/etc/sentry/
WorkingDirectory=/opt/sentry

ExecStart=/usr/bin/sentry celery worker --concurrency <%= scope['sentry::celery_workers'] %>
ExecReload=/bin/kill -HUP $MAINPID

